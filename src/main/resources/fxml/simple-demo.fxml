        <BorderPane prefHeight="567.0" prefWidth="922.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <bottom>
                <Pane prefHeight="31.0" prefWidth="922.0">
                    <children>
                        <Label layoutX="14.0" layoutY="6.0" text="Zoom level:" />
                        <Label fx:id="label" contentDisplay="TOP" layoutX="76.0" layoutY="6.0" text="100%" />
